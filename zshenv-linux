## locales hacking, used only on special issue
# export LC_ALL='C'
export LANG='enUS.UTF-8'
export LC_ALL='en_US.UTF-8'

## path
export CUDA_ROOT='/usr/local/cuda'
export GOPATH='/home/neo/go'
